<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataBinding.ElementosXAML.MainPage">

    <VerticalStackLayout>

        <Border Stroke="Gray"
                Margin="16,4"
                Padding="16">
            
            <VerticalStackLayout>
                <Label 
                    Text="Escriba un texto"
                    TextColor="Black"/>

                <Entry 
                    x:Name="TextEntry"
                    TextColor="Black"
                       Background="#FFFFF0"
                       TextChanged="OnEntry_TextChanged" />
                
            </VerticalStackLayout>
       
        </Border>

        <Label 
            HorizontalOptions="Center"
            FontSize="24"
            FontFamily="Small"
            Text="Mostrar Texto" />

        <Label 
            HorizontalOptions="Center"
            FontAttributes="Italic"
            x:Name="TextLabel"
            Text="Aqui se muestra el texto" />

    </VerticalStackLayout>

</ContentPage>